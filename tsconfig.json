{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "lib": ["es2015", "es2018", "dom"]
  },
  "include": ["**/*.ts", "**/*.vue", "plugins/vue-mavon-editor.js"],
  "exclude": ["node_modules"],
  "typeRoots": ["node_modules/@types", "types"]
}
